<!-- ユーザー編集画面 -->

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>User info</h1>
<%= form_with model: @user do |f| %>
 <label for="inputName">Name</label>
 <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "Name" %>
 <label for="inputImage">Image</label>
 <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
 <label for="inputText">Introduction</label>
 <%= f.text_area :introduction, id: 'user_introduction' %>
 <%= f.submit "Update User", class: "btn btn-secondary" %>
<% end %>

